<form action="/profile/updateuser" method="POST">
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <label for="firstname" class="label">First Name</label>
                <p></p>
                <input class="input" id="firstname" type="text" value="{{user.firstname}}" name="firstname">
            </div>
            <div class="field">
                <label for="lastname" class="label">Last Name </label>
                <input class="input" id="lastname" type="text" value="{{user.lastname}}" name="lastname">
            </div>
        </div>
    </div>
    <div class="field">
        <label for="email" class="label">Email</label>
        <input class="input" id="email" type="text" value="{{user.email}}" name="email">
    </div>
    <div class="field">
        <label for="username" class="label">Username</label>
        <input class="input" id="username" type="text" value="{{user.username}}" name="username">
    </div>
    <div class="field is-grouped">
        <button class="button is-info">Change Details</button>
    </div>
    <div class="field">
        <label for="password" class="label">Password</label>
        <a href="/profile/changepassword" class="button is-info">Change Password</a>
    </div>


    {{#if error}}
        <div id="errorBox" class="notification is-danger">
            <button class="delete" type="button"
                    onclick="document.getElementById('errorBox').style.display='none'"></button>
            Error changing user details!
            <ul>
                {{#each error.details}}
                    <li>{{message}}</li>
                {{/each}}
            </ul>

        </div>
    {{/if}}
</form>
